<%- include('../layout', {body: ` %>
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-comments me-2"></i>
                        Mesajlarım
                    </h5>
                </div>
                <div class="card-body">
                    <% if (conversations.length === 0) { %>
                        <div class="text-center py-5">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz mesajlaşmanız bulunmuyor</h5>
                            <p class="text-muted">
                                <% if (user.role === 'patient') { %>
                                    Bir psikolog ile randevu alarak mesajlaşmaya başlayabilirsiniz.
                                <% } else { %>
                                    Onaylanan randevularınızdan sonra hastalarınızla mesajlaşabilirsiniz.
                                <% } %>
                            </p>
                            <% if (user.role === 'patient') { %>
                                <a href="/psychologists" class="btn btn-primary">
                                    <i class="fas fa-user-md me-2"></i>
                                    Psikologları Görüntüle
                                </a>
                            <% } else { %>
                                <a href="/dashboard" class="btn btn-primary">
                                    <i class="fas fa-tachometer-alt me-2"></i>
                                    Dashboard'a Dön
                                </a>
                            <% } %>
                        </div>
                    <% } else { %>
                        <div class="row">
                            <% conversations.forEach(conversation => { %>
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body d-flex flex-column">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="me-3">
                                                    <% if (conversation.role === 'psychologist') { %>
                                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                            <i class="fas fa-user-md"></i>
                                                        </div>
                                                    <% } else { %>
                                                        <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                            <i class="fas fa-user"></i>
                                                        </div>
                                                    <% } %>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1"><%= conversation.name %></h6>
                                                    <small class="text-muted">
                                                        <% if (conversation.role === 'psychologist') { %>
                                                            <i class="fas fa-user-md me-1"></i>
                                                            Psikolog
                                                        <% } else { %>
                                                            <i class="fas fa-user me-1"></i>
                                                            Hasta
                                                        <% } %>
                                                    </small>
                                                </div>
                                            </div>
                                            
                                            <div class="mt-auto">
                                                <a href="/messages/<%= conversation.id %>" class="btn btn-primary w-100">
                                                    <i class="fas fa-comment-dots me-2"></i>
                                                    Mesajlaşmaya Başla
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="text-center">
                            <h6 class="text-muted mb-3">Mesajlaşma İpuçları</h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="text-center mb-3">
                                        <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                                        <small class="d-block text-muted">Tüm mesajlarınız güvenli şekilde şifrelenir</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center mb-3">
                                        <i class="fas fa-clock fa-2x text-info mb-2"></i>
                                        <small class="d-block text-muted">Mesajlarınız anlık olarak iletilir</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center mb-3">
                                        <i class="fas fa-file-upload fa-2x text-warning mb-2"></i>
                                        <small class="d-block text-muted">Dosya ve görsel paylaşabilirsiniz</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<%`}) %> 